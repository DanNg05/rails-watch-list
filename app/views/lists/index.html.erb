<div class="container">
  <h1>My lists</h1>
  <div>
    <ul class="movie-list">
      <%@lists.each do |list| %>
        <% if list.image.attached? %>
          <li class="movie-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            <%= link_to list.name, list_path(list) %>
          </li>
        <%else %>
          <li class="movie-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1567263361507-83f755d9fa97?q=80&w=3388&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')">
            <%= link_to list.name, list_path(list) %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div>
    <%= link_to "Create a movie list", new_list_path, class:"list-create" %>
  </div>
</div>
